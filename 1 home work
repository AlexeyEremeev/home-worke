
#2
import random
s = []
p = []
n = []
q = int(input("Введите кол-во чисел: "))
for i in range (q):
	k = int(random.random() * 100 - 50)
	s.append(k)
for i in range(q):
	if (s[i] > 0):
		p.append(s[i])
	elif (s[i] < 0):
		n.append(s[i])		
print (p)
print(n)

#3
s = 'hello mama pa apple samsung mouse'
n = len(s)
mx = -1
k = 0
for i in range(0, n, 1):
	if (s[i] != ' '):
		k += 1
	else:
		if (k > mx):
			mx = k
		k = 0	
print (mx)
