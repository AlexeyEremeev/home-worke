#1
python:
s = [i for i in range(0, 100, 1)]
a = (input())
for i in range(100):
	if (a == s[i]):
		print(i)
    
c++:
#include <iostream>

using namespace std;
int main(int argc, char *argv[]) {
	int a[100];
	int k;
	cin >> k;
	for (int i = 0; i < 100; i ++)
		a[i] = i;
	for (int i = 0; i < 100; i ++)
		if (k == a[i])
			cout << i;
}

#2
import random
s = []
p = []
n = []
q = int(input("Введите кол-во чисел: "))
for i in range (q):
	k = int(random.random() * 100 - 50)
	s.append(k)
for i in range(q):
	if (s[i] > 0):
		p.append(s[i])
	elif (s[i] < 0):
		n.append(s[i])		
print (p)
print(n)

#3
s = 'hello mama pa apple samsung mouse'
n = len(s)
mx = -1
k = 0
for i in range(0, n, 1):
	if (s[i] != ' '):
		k += 1
	else:
		if (k > mx):
			mx = k
		k = 0	
print (mx)
